{
    "version": 2,
    "name": "hirego-backend",
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "server/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/index.js"
        },
        {
            "src": "/health",
            "dest": "server/index.js"
        }
    ],
    "env": {
        "PORT": "3000",
        "SUPABASE_URL": "@supabase_url",
        "SUPABASE_ANON_KEY": "@supabase_anon_key",
        "ENCRYPTION_KEY": "@encryption_key",
        "NODE_ENV": "production"
    }
}